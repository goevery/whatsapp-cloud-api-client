{
  "name": "whatsapp-cloud-api-client",
  "version": "0.0.0",
  "description": "A TypeScript client for WhatsApp Cloud API",
  "type": "module",
  "license": "MIT",
  "homepage": "https://github.com/goevery/whatsapp-cloud-api-client#readme",
  "bugs": {
    "url": "https://github.com/goevery/whatsapp-cloud-api-client/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goevery/whatsapp-cloud-api-client.git"
  },
  "author": "Juan Mar√≠n <juan@goevery.co>",
  "files": [
    "dist"
  ],
  "main": "./dist/main.cjs",
  "module": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/main.js",
      "require": "./dist/main.cjs"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js",
      "require": "./dist/schema.cjs"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/node": "^24.9.2",
    "bumpp": "^10.3.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.38.0",
    "globals": "^16.4.0",
    "jiti": "^2.6.1",
    "prettier": "^3.6.2",
    "tsdown": "^0.15.11",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vitest": "^4.0.4"
  },
  "dependencies": {
    "zod": "^4.1.12"
  }
}
